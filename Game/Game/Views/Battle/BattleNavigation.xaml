<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BattleNavigation">

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalStack}">
            <Button Clicked="CharacterPicker_Clicked"
                    Text="Character Picker Page"/>
            <Button Clicked="GameEnd_Clicked"
                    Text="Game End (Score) Page"/>
            <Button Clicked="BattlePage_Clicked"
                    Text="Battle Page"/>
            <Button Clicked="PersonDie_Clicked"
                    Text="Person Death Page"/>
            <Button Clicked="RoundOver_Clicked"
                    Text="Round Over Page"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>